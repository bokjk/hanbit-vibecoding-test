{
  "name": "@vive/server",
  "version": "1.0.0",
  "description": "TODO 앱 백엔드 서버 (AWS Lambda)",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:lambda": "tsc -p lambda/tsconfig.json",
    "build:infrastructure": "cd infrastructure && tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "deploy": "cd infrastructure && pnpm cdk deploy",
    "destroy": "cd infrastructure && pnpm cdk destroy",
    "synth": "cd infrastructure && pnpm cdk synth",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@vive/types": "workspace:*",
    "@aws-sdk/client-dynamodb": "^3.470.0",
    "@aws-sdk/util-dynamodb": "^3.470.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "keywords": [
    "todo",
    "aws",
    "lambda",
    "serverless"
  ],
  "author": "Hanbit",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
