{
  "name": "Hanbit TODO",
  "short_name": "TODO",
  "description": "효율적이고 직관적인 할일 관리 앱",
  "theme_color": "#3b82f6",
  "background_color": "#f3f4f6",
  "display": "standalone",
  "scope": "/",
  "start_url": "/",
  "orientation": "portrait-primary",
  "lang": "ko-KR",
  "dir": "ltr",

  "icons": [
    {
      "src": "/vite.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    }
  ],

  "categories": ["productivity", "utilities", "lifestyle"],

  "screenshots": [],

  "shortcuts": [],

  "related_applications": [],
  "prefer_related_applications": false,

  "protocol_handlers": [],

  "share_target": {
    "action": "/?action=share",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "file_handlers": [
    {
      "action": "/?action=open-file",
      "accept": {
        "text/plain": [".txt", ".md"],
        "application/json": [".json"]
      }
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
