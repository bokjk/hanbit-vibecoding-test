  "screenshots": [
    {
      "src": "/screenshot-mobile-1.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "모바일 할일 목록 화면"
    },
    {
      "src": "/screenshot-desktop-1.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "데스크톱 할일 관리 화면"
    }
  ],

  "shortcuts": [
    {
      "name": "새 할일 추가",
      "short_name": "새 할일",
      "description": "빠르게 새로운 할일을 추가합니다",
      "url": "/?action=new-todo",
      "icons": [
        {
          "src": "/shortcut-new-todo.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "완료된 할일",
      "short_name": "완료된 할일",
      "description": "완료된 할일 목록을 확인합니다",
      "url": "/?filter=completed",
      "icons": [
        {
          "src": "/shortcut-completed.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],

  "related_applications": [],
  "prefer_related_applications": false,

  "protocol_handlers": [],

  "share_target": {
    "action": "/?action=share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "file_handlers": [
    {
      "action": "/?action=open-file",
      "accept": {
        "text/plain": [".txt", ".md"],
        "application/json": [".json"]
      }
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
