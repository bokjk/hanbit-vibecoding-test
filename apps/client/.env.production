# 프로덕션 환경 설정
# 배포 시 실제 AWS 리소스 ID로 교체하세요

# API 설정
VITE_API_BASE_URL=https://api.hanbit-todo.com/api/v1
VITE_API_TIMEOUT=10000

# 인증 설정
VITE_AUTH_MODE=guest
VITE_COGNITO_USER_POOL_ID=${COGNITO_USER_POOL_ID}
VITE_COGNITO_USER_POOL_CLIENT_ID=${COGNITO_USER_POOL_CLIENT_ID}
VITE_COGNITO_IDENTITY_POOL_ID=${COGNITO_IDENTITY_POOL_ID}

# API 재시도 설정
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000

# 기능 토글
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_API_MODE=true
VITE_DEBUG_MODE=false

# 개발자 도구
VITE_LOG_LEVEL=warn

# 보안 설정
VITE_ALLOWED_ORIGINS=https://todoapp.hanbit.com,https://hanbit-todo.com
VITE_ENABLE_SECURITY_LOGGING=false
VITE_ENABLE_CSP_STRICT=true
VITE_SECURITY_HEADERS_ENABLED=true

# 모니터링 설정 (프로덕션 환경)
VITE_ENABLE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_ANALYTICS=true
VITE_DEBUG=false