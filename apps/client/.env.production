# 프로덕션 환경 설정
VITE_NODE_ENV=production
VITE_APP_VERSION=1.0.0

# API 설정 - localStorage만 사용 (백엔드 API가 배포되면 URL 입력)
# 예: VITE_API_BASE_URL=https://xxxxx.execute-api.ap-southeast-2.amazonaws.com/prod
VITE_API_BASE_URL=

# AWS Cognito 설정 (프로덕션 환경)
# 배포 시 실제 AWS 리소스 ID로 교체하세요
VITE_COGNITO_USER_POOL_ID=${COGNITO_USER_POOL_ID}
VITE_COGNITO_USER_POOL_CLIENT_ID=${COGNITO_USER_POOL_CLIENT_ID}
VITE_COGNITO_IDENTITY_POOL_ID=${COGNITO_IDENTITY_POOL_ID}

# 기능 플래그
VITE_DEBUG_MODE=false
VITE_ENABLE_API_MODE=false
VITE_ENABLE_OFFLINE_MODE=true

# 성능 설정
VITE_API_TIMEOUT=5000
VITE_RETRY_COUNT=1

# 보안 설정
VITE_ENABLE_CSP_NONCE=true
VITE_ENABLE_SECURITY_LOGGING=false
VITE_ENABLE_CSP_STRICT=true
VITE_SECURITY_HEADERS_ENABLED=true

# 모니터링 설정 (localStorage 전용 모드)
VITE_ENABLE_MONITORING=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_ANALYTICS=false