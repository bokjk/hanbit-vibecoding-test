{
  "name": "@vive/monorepo",
  "version": "1.0.0",
  "description": "TODO 앱 모노레포 - React + TypeScript + AWS Lambda",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "// === 개발 서버 ===": "",
    "dev": "pnpm dev:client",
    "dev:client": "pnpm --filter @vive/client dev",
    "// === 빌드 ===": "",
    "build": "pnpm build:all",
    "build:all": "pnpm build:packages && pnpm build:client && pnpm build:server",
    "build:for-deploy": "pnpm build:packages && pnpm build:client",
    "build:packages": "pnpm --filter @vive/ui build",
    "build:client": "pnpm --filter @vive/client build",
    "build:server": "pnpm --filter @vive/server build",
    "// === 테스트 ===": "",
    "test": "pnpm test:all",
    "test:all": "pnpm test:client && pnpm test:server",
    "test:client": "pnpm --filter @vive/client test",
    "test:server": "pnpm --filter @vive/server test --run",
    "test:e2e": "pnpm --filter @vive/client test:e2e",
    "// === 코드 품질 ===": "",
    "lint": "pnpm lint:all",
    "lint:all": "pnpm lint:client && pnpm lint:server",
    "lint:client": "pnpm --filter @vive/client lint",
    "lint:server": "pnpm --filter @vive/server lint",
    "lint:fix": "pnpm lint:fix:all",
    "lint:fix:all": "pnpm lint:fix:client && pnpm lint:fix:server",
    "lint:fix:client": "pnpm --filter @vive/client lint:fix",
    "lint:fix:server": "pnpm --filter @vive/server lint:fix",
    "// === 포맷팅 ===": "",
    "format": "pnpm format:all",
    "format:all": "pnpm format:client && pnpm format:server",
    "format:client": "pnpm --filter @vive/client format",
    "format:server": "pnpm --filter @vive/server format",
    "// === 타입 체크 ===": "",
    "type-check": "pnpm type-check:all",
    "type-check:all": "pnpm type-check:client && pnpm type-check:server",
    "type-check:client": "pnpm --filter @vive/client type-check",
    "type-check:server": "pnpm --filter @vive/server type-check",
    "// === 배포 ===": "",
    "deploy": "pnpm deploy:dev",
    "deploy:dev": "pnpm --filter @vive/infrastructure deploy-script:dev",
    "deploy:test": "pnpm --filter @vive/infrastructure deploy-script:test",
    "deploy:prod": "pnpm --filter @vive/infrastructure deploy-script:prod",
    "deploy:server": "pnpm --filter @vive/server deploy",
    "// === 배포 검증 ===": "",
    "pre-deploy": "pnpm pre-deploy:dev",
    "pre-deploy:dev": "pnpm scripts:pre-deploy dev",
    "pre-deploy:test": "pnpm scripts:pre-deploy test",
    "pre-deploy:prod": "pnpm scripts:pre-deploy prod",
    "post-deploy": "pnpm post-deploy:dev",
    "post-deploy:dev": "pnpm scripts:post-deploy dev",
    "post-deploy:test": "pnpm scripts:post-deploy test",
    "post-deploy:prod": "pnpm scripts:post-deploy prod",
    "rollback": "pnpm rollback:dev",
    "rollback:dev": "pnpm scripts:rollback dev",
    "rollback:test": "pnpm scripts:rollback test",
    "rollback:prod": "pnpm scripts:rollback prod",
    "// === 스크립트 실행 ===": "",
    "scripts:pre-deploy": "node apps/server/infrastructure/scripts/pre-deploy.js",
    "scripts:post-deploy": "node apps/server/infrastructure/scripts/post-deploy.js",
    "scripts:rollback": "node apps/server/infrastructure/scripts/rollback.js",
    "scripts:env-check": "node apps/server/infrastructure/scripts/env-check.js",
    "// === 품질 게이트 ===": "",
    "quality": "pnpm quality:all",
    "quality:all": "node scripts/run-quality-suite.js",
    "quality:fast": "node scripts/run-quality-suite.js --skip-tests",
    "quality:performance": "node scripts/performance-benchmark.js",
    "quality:security": "node scripts/security-scanner.js",
    "quality:accessibility": "node scripts/accessibility-tester.js",
    "quality:dashboard": "node scripts/quality-dashboard.js",
    "quality:dev": "node scripts/run-quality-suite.js --environment development --baseUrl http://localhost:4173",
    "quality:staging": "node scripts/run-quality-suite.js --environment staging --baseUrl https://staging.example.com",
    "quality:prod": "node scripts/run-quality-suite.js --environment production --baseUrl https://production.example.com",
    "// === 성능 테스트 ===": "",
    "performance": "pnpm performance:test",
    "performance:test": "node scripts/performance-test.js",
    "performance:report": "node scripts/performance-test.js && cat performance-report.json",
    "// === 테스트 커버리지 ===": "",
    "test:coverage": "pnpm test:coverage:all",
    "test:coverage:all": "pnpm test:coverage:client && pnpm test:coverage:server",
    "test:coverage:client": "pnpm --filter @vive/client test:coverage",
    "test:coverage:server": "pnpm --filter @vive/server test:coverage --run",
    "// === 정리 ===": "",
    "clean": "pnpm clean:all",
    "clean:all": "pnpm clean:client && pnpm clean:server",
    "clean:client": "pnpm --filter @vive/client clean || rm -rf apps/client/dist apps/client/node_modules/.vite",
    "clean:server": "pnpm --filter @vive/server clean || rm -rf apps/server/dist",
    "clean:reports": "rm -rf quality-reports dashboard performance-reports security-reports accessibility-reports"
  },
  "keywords": [
    "todo",
    "react",
    "typescript",
    "vite",
    "tailwind",
    "aws",
    "lambda",
    "serverless",
    "monorepo"
  ],
  "author": "Hanbit",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "axe-core": "^4.8.3",
    "chrome-launcher": "^1.1.0",
    "lighthouse": "^11.4.0",
    "playwright": "^1.40.1"
  },
  "lint-staged": {
    "apps/client/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter @vive/client lint:fix",
      "pnpm --filter @vive/client format"
    ],
    "apps/server/**/*.{ts,js}": [
      "pnpm --filter @vive/server lint:fix",
      "pnpm --filter @vive/server format"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
