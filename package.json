{
  "name": "@hanbit/monorepo",
  "version": "1.0.0",
  "description": "TODO 앱 모노레포 - React + TypeScript + AWS Lambda",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "// === 개발 서버 ===": "",
    "dev": "pnpm dev:client",
    "dev:client": "pnpm --filter @hanbit/client dev",
    "// === 빌드 ===": "",
    "build": "pnpm build:all",
    "build:all": "pnpm build:client && pnpm build:server",
    "build:client": "pnpm --filter @hanbit/client build",
    "build:server": "pnpm --filter @hanbit/server build",
    "// === 테스트 ===": "",
    "test": "pnpm test:all",
    "test:all": "pnpm test:client && pnpm test:server",
    "test:client": "pnpm --filter @hanbit/client test",
    "test:server": "pnpm --filter @hanbit/server test --run",
    "test:e2e": "pnpm --filter @hanbit/client test:e2e",
    "// === 코드 품질 ===": "",
    "lint": "pnpm lint:all",
    "lint:all": "pnpm lint:client && pnpm lint:server",
    "lint:client": "pnpm --filter @hanbit/client lint",
    "lint:server": "pnpm --filter @hanbit/server lint",
    "lint:fix": "pnpm lint:fix:all",
    "lint:fix:all": "pnpm lint:fix:client && pnpm lint:fix:server",
    "lint:fix:client": "pnpm --filter @hanbit/client lint:fix",
    "lint:fix:server": "pnpm --filter @hanbit/server lint:fix",
    "// === 포맷팅 ===": "",
    "format": "pnpm format:all",
    "format:all": "pnpm format:client && pnpm format:server",
    "format:client": "pnpm --filter @hanbit/client format",
    "format:server": "pnpm --filter @hanbit/server format",
    "// === 타입 체크 ===": "",
    "type-check": "pnpm type-check:all",
    "type-check:all": "pnpm type-check:client && pnpm type-check:server",
    "type-check:client": "pnpm --filter @hanbit/client type-check",
    "type-check:server": "pnpm --filter @hanbit/server type-check",
    "// === 배포 ===": "",
    "deploy": "pnpm deploy:server",
    "deploy:server": "pnpm --filter @hanbit/server deploy",
    "// === 정리 ===": "",
    "clean": "pnpm clean:all",
    "clean:all": "pnpm clean:client && pnpm clean:server",
    "clean:client": "pnpm --filter @hanbit/client clean || rm -rf apps/client/dist apps/client/node_modules/.vite",
    "clean:server": "pnpm --filter @hanbit/server clean || rm -rf apps/server/dist"
  },
  "keywords": [
    "todo",
    "react",
    "typescript",
    "vite",
    "tailwind",
    "aws",
    "lambda",
    "serverless",
    "monorepo"
  ],
  "author": "Hanbit",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "apps/client/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter @hanbit/client lint:fix",
      "pnpm --filter @hanbit/client format"
    ],
    "apps/server/**/*.{ts,js}": [
      "pnpm --filter @hanbit/server lint:fix",
      "pnpm --filter @hanbit/server format"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
